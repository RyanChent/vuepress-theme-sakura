.popcontainer 
    width 100%
    height 100%
    line-height 1
    min-height 300px 
    padding: 2px 6px 4px 
    background-color rgba(242, 242, 242, 0.5) 
    border-radius 10px
    .botui-actions-container
        padding 10px 20px
        .botui-actions-buttons-button
            border 0
            color #fff
            margin 0
            font-size 100%
            line-height normal
            vertical-align baseline
            font-weight 500
            padding 7px 15px
            border-radius 4px
            background #777979
            box-shadow 2px 3px 4px  0 rgba(0, 0, 0, 0.25)
            & + .botui-actions-buttons-button
                margin-left 10px
    .botui-messages-container
        padding 10px 20px
        .botui-message
            margin 10px 0
            min-height 20px
            .botui-message-content
                width auto
                max-width 85%
                padding 7px 13px
                border-radius 15px
                display inline-block
                color #595a5a
                background-color #ebebeb
                .botui-message-content-image 
                    margin: 5px 0;
                    display: block;
                    max-width: 200px;
                    max-height: 200px;
                &.text
                    line-height 1.3
                &.human
                    float right 
                    margin-bottom 12.2px
                    color #f7f8f8
                    background-color #919292
    h4
        &::before
            content ''
            margin-right 0
            color #ff6d6d
        &::after
            content ''
            left 0
            position absolute
            color #ff6d6d